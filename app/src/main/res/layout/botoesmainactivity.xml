<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_posts_view"
            android:padding="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posts" />

        <Button
            android:id="@+id/bt_seguir"
            android:padding="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siga-nos" />

        <Button
            android:id="@+id/bt_eventos"
            android:padding="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eventos" />

        <Button
            android:id="@+id/bt_videos"
            android:padding="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vídeos" />

        <Button
            android:padding="17dp"
            android:id="@+id/bt_cursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos disponíveis" />

        <Button
            android:id="@+id/bt_guias_de_estudo_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guias de estudo" />

        <Button
            android:id="@+id/bt_player"
            android:padding="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player" />

        <Button
            android:id="@+id/bt_compartilhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compartilhar" />


    </LinearLayout>

</FrameLayout>
