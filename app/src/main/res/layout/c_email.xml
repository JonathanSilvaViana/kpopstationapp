<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/titulo"
                android:layout_alignParentLeft="true"
                android:textSize="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:text="Seu nome" />

            <EditText
                android:id="@+id/campo_nome_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/textview_e-mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titulo"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:textSize="22dp"
                android:layout_alignParentTop="true"
                android:text="Seu e-mail" />

            <EditText
                android:id="@+id/campo_endereco_de_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="17dp"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textviewmensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titulo"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_alignParentTop="true"
                android:textSize="22dp"
                android:text="Sua mensagem" />

            <EditText
                android:id="@+id/campo_mensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/campo_mensagem"
                android:textSize="17dp"
                android:ems="10"
                android:inputType="textMultiLine|time" />

            <Button
                android:id="@+id/bt_enviar_email"
                android:layout_width="match_parent"
                android:padding="15dp"
                android:background="@drawable/botao_redondo"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:text="Encaminhar" />

        </LinearLayout>
    </ScrollView>




</FrameLayout>
